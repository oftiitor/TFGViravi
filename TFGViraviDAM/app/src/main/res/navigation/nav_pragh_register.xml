    <fragment
        android:id="@+id/nameFragment"
        android:name="com.example.tfgviravidam.fragmentsRegister.NameFragment"
        android:label="fragment_name"
        tools:layout="@layout/fragment_name" >
        <action
            android:id="@+id/action_nameFragment_to_birthdayFragment"
            app:destination="@id/birthdayFragment"
            app:enterAnim="@anim/to_rigth"
            app:exitAnim="@anim/to_left" />
    </fragment>
    <fragment
        android:id="@+id/birthdayFragment"
        android:name="com.example.tfgviravidam.fragmentsRegister.BirthdayFragment"
        android:label="fragment_birthday"
        tools:layout="@layout/fragment_birthday" >
        <action
            android:id="@+id/action_birthdayFragment_to_phoneFragment"
            app:destination="@id/phoneFragment"
            app:enterAnim="@anim/to_rigth"
            app:exitAnim="@anim/to_left" />
    </fragment>
    <fragment
        android:id="@+id/phoneFragment"
        android:name="com.example.tfgviravidam.fragmentsRegister.PhoneFragment"
        android:label="fragment_phone"
        tools:layout="@layout/fragment_phone" >
        <action
            android:id="@+id/action_phoneFragment_to_mailFragment"
            app:destination="@id/mailFragment"
            app:enterAnim="@anim/to_rigth"
            app:exitAnim="@anim/to_left" />
    </fragment>
    <fragment
        android:id="@+id/mailFragment"
        android:name="com.example.tfgviravidam.fragmentsRegister.MailFragment"
        android:label="fragment_mail"
        tools:layout="@layout/fragment_mail" >
        <action
            android:id="@+id/action_mailFragment_to_passwordFragment"
            app:destination="@id/passwordFragment"
            app:enterAnim="@anim/to_rigth"
            app:exitAnim="@anim/to_left" />
    </fragment>
    <fragment
        android:id="@+id/passwordFragment"
        android:name="com.example.tfgviravidam.fragmentsRegister.PasswordFragment"
        android:label="fragment_password"
        tools:layout="@layout/fragment_password" >
        <action
            android:id="@+id/action_passwordFragment_to_usernameFragment"
            app:destination="@id/usernameFragment"
            app:enterAnim="@anim/to_rigth"
            app:exitAnim="@anim/to_left" />
    </fragment>
    <fragment
        android:id="@+id/usernameFragment"
        android:name="com.example.tfgviravidam.fragmentsRegister.UsernameFragment"
        android:label="fragment_username"
        tools:layout="@layout/fragment_username" >
        <action
            android:id="@+id/action_usernameFragment_to_photoFragment"
            app:destination="@id/photoFragment" />
    </fragment>
    <fragment
        android:id="@+id/photoFragment"
        android:name="com.example.tfgviravidam.fragmentsRegister.PhotoFragment"
        android:label="fragment_photo"
        tools:layout="@layout/fragment_photo" />
</navigation>