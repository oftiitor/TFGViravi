<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="180dp"
    android:layout_height="160dp"
    android:layout_margin="15dp"
    app:cardBackgroundColor="#FAFAFA"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    tools:ignore="MissingClass">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/FotoCard"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginLeft="0dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline98"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintStart_toStartOf="@+id/guideline97"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/a_ko_hong_a" />

            <TextView
                android:id="@+id/Nombre"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppins_extrabold"
                android:text="Viaje a Thailandia"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="@id/guideline97"
                app:layout_constraintTop_toBottomOf="@+id/FotoCard" />

            <TextView
                android:id="@+id/NumeroUsers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppins_extrabold"
                android:text="8 usuarios"
                android:textColor="#3C3C3C"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="@id/guideline97"
                app:layout_constraintTop_toBottomOf="@+id/Nombre" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="1.0" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline97"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.0" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline98"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.66" />

        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>