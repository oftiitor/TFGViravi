<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentsRegister.PhoneFragment">

    <TextView
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Â¿Cual es tu numero de telefono?"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="245dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Solo se usara para verificar la cuenta"
        android:textAlignment="center"
        android:textColor="#737373"
        android:textSize="15sp" />



    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtPhone"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"

        android:layout_gravity="center_horizontal"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/poppins_extrabold"
        android:inputType="phone"
        android:text="+34 "
        android:textColor="#B0000000"
        android:textColorHint="#99B8B8B8"
        android:textSize="30dp" />


    <Button
        android:id="@+id/btnPhone"
        android:background="@drawable/selector_btn_property"
        android:enabled="false"
        android:layout_width="378dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="280dp"
        android:backgroundTint="@color/black"
        android:text="Continuar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17dp"
        app:cornerRadius="15dp"
        app:rippleColor="#CDCDCD" />


</FrameLayout>