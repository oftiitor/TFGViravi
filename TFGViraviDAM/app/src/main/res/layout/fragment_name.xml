<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1ECE0"
    android:backgroundTint="#F1ECE0"
    tools:context=".NameFragment">

    <TextView
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Comencemos. Â¿Como te llamas?"

        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp" />


    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="300dp"
        android:layout_height="95dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"

        android:ellipsize="middle"
        android:fontFamily="@font/poppins_extrabold"
        android:gravity="center"
        android:hint="NOMBRE"
        android:password="false"
        android:phoneNumber="false"
        android:singleLine="false"
        android:textColor="#B0000000"
        android:textColorHighlight="#C9676767"
        android:textColorHint="#994C4C4C"
        android:textColorLink="#787878"
        android:textSize="50dp" />

    <Button
        android:id="@+id/btnName"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:backgroundTint="#7A2B6244"
        android:fontFamily="@font/poppins_semibold"
        android:text="continuar"
        android:textSize="17dp" />

</FrameLayout>